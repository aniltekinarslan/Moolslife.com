@using Resources
@model MoolsPayment.Models.Accounts

@{
    ViewBag.Title = Home.EditApiSettings;
}

<h2>@Home.EditApiSettings</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AccountID)

        <div class="form-group">
            @Html.LabelFor(model => model.NotifyUrl, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NotifyUrl, new { htmlAttributes = new { @class = "form-control  col-md-2" } })
                @Html.ValidationMessageFor(model => model.NotifyUrl, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.LogoImageUrl, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.LogoImageUrl, new {htmlAttributes = new {@class = "form-control  col-md-2"}})
                @Html.ValidationMessageFor(model => model.LogoImageUrl, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PaymentCancelRedirectUrl, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PaymentCancelRedirectUrl, new { htmlAttributes = new { @class = "form-control  col-md-2" } })
                @Html.ValidationMessageFor(model => model.PaymentCancelRedirectUrl, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ReturnUrlSuccess, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.ReturnUrlSuccess, new {htmlAttributes = new {@class = "form-control  col-md-2"}})
                @Html.ValidationMessageFor(model => model.ReturnUrlSuccess, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ReturnUrlFailed, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.ReturnUrlFailed, new {htmlAttributes = new {@class = "form-control  col-md-2"}})
                @Html.ValidationMessageFor(model => model.ReturnUrlFailed, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Home.Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<a href="/ApiSettings">
    <input type="button" class="geri-btn" value="<< @Home.GoBack" />
</a>
