@using Resources

@{
    ViewBag.Title = "Dashboard";
}

<!-- BEGIN PAGE HEADER-->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index", "Home")">Panel</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="@Url.Action("Index", "Home")">Dashboard</a>
        </li>
    </ul>

</div>
<h3 class="page-title">
    Dashboard <small>@Home.ReportsAndStatistics</small>
</h3>
<!-- END PAGE HEADER-->
<!-- BEGIN DASHBOARD STATS -->
<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="dashboard-stat blue-madison">
            <div class="visual">
                <i class="fa fa-comments"></i>
            </div>
            <div class="details">
                <div class="number">
                   <font size="4">@Home.CurrentBalance:</font>  @ViewBag.CurrentBalance TL 
                </div>
                <div class="desc">
                    <font size="3">@Home.UsableBalance:</font>  <font size="4"><b>@ViewBag.CurrentusableBalance TL</b></font>

</div>
            </div>
            <a class="more" href="@Url.Action("PaymentList", "Account")">
                @Home.PaymentList<i class="m-icon-swapright m-icon-white"></i>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="dashboard-stat purple-plum">
            <div class="visual">
                <i class="fa fa-globe"></i>
            </div>
            <div class="details">
                <div class="number">
                    @if (ViewBag.WaitingPayments == null)
                    {
                        @Html.Raw("0,00")
                    }
                    else
                    {
                        @Html.Raw(ViewBag.WaitingPayments)
                    } TL
                </div>
                <div class="desc">
                    @Home.TotalCount: @ViewBag.WaitingPaymentsCount 
                </div>
            </div>
            <a class="more" href="@Url.Action("PaymentList", "Account" , new { @id = "Waiting"})">
                @Home.WaitingPayments<i class="m-icon-swapright m-icon-white"></i>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="dashboard-stat green-haze">
            <div class="visual">
                <i class="fa fa-shopping-cart"></i>
            </div>
            <div class="details">
                <div class="number">
                    @if (ViewBag.ApprovedPayments == null)
                    {
                        @Html.Raw("0,00")
                    }
                    else
                    {
                        @Html.Raw(ViewBag.ApprovedPayments)
                    } TL
                </div>
                <div class="desc">
                    @Home.TotalCount: @ViewBag.ApprovedPaymentsCount 
                </div>
            </div>
            <a class="more" href="@Url.Action("PaymentList", "Account" , new { @id = "Approved"})">
                @Home.ApprovedPayments<i class="m-icon-swapright m-icon-white"></i>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="dashboard-stat red-intense">
            <div class="visual">
                <i class="fa fa-bar-chart-o"></i>
            </div>
            <div class="details">
                <div class="number">
                    @if (ViewBag.RejectedPayments == null)
                    { 
                        @Html.Raw("0,00")
                    }
                    else
                    {
                        @Html.Raw(ViewBag.RejectedPayments)
                    }  TL
                </div>
                <div class="desc">
                   @Home.TotalCount: @ViewBag.RejectedPaymentsCount
                </div>
            </div>
            <a class="more" href="@Url.Action("PaymentList", "Account" , new { @id = "Rejected"})">
                @Home.RejectedPayments<i class="m-icon-swapright m-icon-white"></i>
            </a>
        </div>
    </div>


</div>
<!-- END DASHBOARD STATS -->
<div class="clearfix">
</div>
